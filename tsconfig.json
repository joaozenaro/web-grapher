{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "src/app/*"
            ]
        },
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "outDir": "./lib/",
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}